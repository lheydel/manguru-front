{
  "name": "manguru-front",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/lheydel/manguru-back.git"
  },
  "author": "Luc Heydel",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "npm run pre-build && react-scripts start",
    "build": "npm run pre-build && react-scripts build",
    "test": "react-scripts test --coverage a",
    "eject": "react-scripts eject",

    "pre-build": "npm run tslint && npm run lang-extract && npm run lang-compile",
    "tslint": "tslint -c tslint.json -p tsconfig.json",

    "add-locale": "lingui add-locale",
    "lang-extract": "lingui extract",
    "lang-clean": "lingui extract --clean",
    "lang-compile": "lingui compile --strict"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@lingui/react": "^2.8.3",
    "connected-react-router": "^6.4.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.0.1",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@lingui/cli": "^2.8.3",
    "@lingui/macro": "^2.8.3",
    "@types/enzyme": "^3.10.1",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "24.0.15",
    "@types/lingui__core": "^2.7.0",
    "@types/lingui__macro": "^2.7.3",
    "@types/lingui__react": "^2.8.0",
    "@types/node": "12.0.10",
    "@types/react": "16.8.22",
    "@types/react-dom": "16.8.4",
    "@types/react-redux": "^7.1.0",
    "@types/react-router-dom": "^4.3.4",
    "@types/react-test-renderer": "^16.8.2",
    "@types/redux-logger": "^3.0.7",
    "babel-core": "^7.0.0-bridge.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "jest-sonar-reporter": "^2.0.0",
    "react-test-renderer": "^16.8.6",
    "redux-devtools": "^3.5.0",
    "tslint": "^5.18.0",
    "typescript": "^3.4.3",
    "utility-types": "^3.7.0"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "sonar-report.xml",
    "indent": 4
  }
}
